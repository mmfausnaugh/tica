#!/usr/bin/env bash

#as an example:  /pdo/spoc-data/sector-${sector}/ffis/
input_dir=$(realpath $1)
CALDIR=$2

#make in list for tica
for i in 1 2 3 4; do
    for j in 1 2 3 4; do
	mkdir cam${i}_ccd${j}
	cd cam${i}_ccd${j}
	ls ${input_dir}/tess*-${i}-${j}-*ffir*fits* > inlist
	cd ..
    done
done


#run tica
for i in 1 2 3 4; do    
    for j in 1 2 3 4; do
	cd cam${i}_ccd${j}
	tica-cal-ccd2ccd inlist --outdir . --caldir $CALDIR  --log ../tica.log
	cd ..
    done
done

